# App
APP_ENV=dev
APP_NAME=MyPF Agent
DATABASE_URL=sqlite:///./mypf.db
API_PREFIX=/api
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_ORIGIN_REGEX=^https?://(localhost|127\\.0\\.0\\.1)(:\\d+)?$

# Trading 212
T212_BASE_ENV=demo
# Legacy single-account fallback (maps to Invest if set)
T212_API_KEY=
T212_API_SECRET=
# Preferred dual-account credentials
T212_INVEST_API_KEY=
T212_INVEST_API_SECRET=
T212_STOCKS_ISA_API_KEY=
T212_STOCKS_ISA_API_SECRET=
# Optional Archie-specific unrestricted/read-only keys
ARCHIE_T212_API_KEY_INVEST=
ARCHIE_T212_API_SECRET_INVEST=
ARCHIE_T212_API_KEY_STOCKS_ISA=
ARCHIE_T212_API_SECRET_STOCKS_ISA=
# Alternate env var names (supported too)
T212_API_KEY_INVEST=
T212_API_SECRET_INVEST=
T212_API_KEY_STOCKS_ISA=
T212_API_SECRET_STOCKS_ISA=

# Execution safety
BROKER_MODE=paper
AUTOPILOT_ENABLED=false
MAX_SINGLE_ORDER_NOTIONAL=500
MAX_DAILY_NOTIONAL=1500
MAX_POSITION_WEIGHT=0.25
DUPLICATE_ORDER_WINDOW_SECONDS=90

# Optional AI provider override
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MEMORY_MODEL=claude-haiku-4-5
CLAUDE_SETTING_SOURCES=project
CLAUDE_PROJECT_CWD=.claude/runtime
CLAUDE_CHAT_ALLOW_WRITES=true
CLAUDE_MEMORY_STRATEGY=self_managed
CLAUDE_MEMORY_ENABLED=true
CLAUDE_MEMORY_MAX_FACTS=80
AGENT_PROVIDER=claude
AGENT_WORKSPACE=./.claude/agent_workspace
AGENT_MAX_TURNS=6
AGENT_ALLOW_BASH=false
PORTFOLIO_DISPLAY_CURRENCY=GBP
INPROC_SCHEDULER_ENABLED=false

# Optional research connectors
NEWSAPI_API_KEY=
X_API_BEARER_TOKEN=
